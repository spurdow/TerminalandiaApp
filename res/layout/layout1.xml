<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/termbg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spnReg"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:id="@+id/spnProv"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnReg"
        android:layout_below="@+id/spnReg"
        android:layout_marginTop="40dp" />

    <Spinner
        android:id="@+id/spnMode"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnProv"
        android:layout_below="@+id/spnProv"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnMode"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Search Terminal" />

</RelativeLayout>
